        <name>cpu_code</name>
        <age>22</age>
        <gender>男</gender>

        <br/>
    </user>

    <user id="2">
        <name>cpu</name>
        <age>30</age>
        <dender>女</dender>

        <code>
            <!-- CDATA区：在该区域中的数据会被原样展示-->
            if(a &lt; b &amp;&amp; a &gt; c){
            }

            <![CDATA[
                if(a < b && a > c){
                }
            ]]>
        </code>
    </user>
</users>